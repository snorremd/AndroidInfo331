<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android1:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:orientation="vertical" >

        <LinearLayout
            android1:layout_width="match_parent"
            android1:layout_height="wrap_content"
            android1:orientation="vertical" >

            <TextView
                android1:id="@+id/eventName"
                android1:layout_width="match_parent"
                android1:layout_height="wrap_content"
                android1:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android1:id="@+id/eventLocation"
                android1:layout_width="match_parent"
                android1:layout_height="wrap_content"
                android1:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android1:id="@+id/eventDateAndTime"
                android1:layout_width="match_parent"
                android1:layout_height="wrap_content"
                android1:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <TextView
            android1:id="@+id/eventDescription"
            android1:layout_width="match_parent"
            android1:layout_height="wrap_content" />

        <LinearLayout
            android1:layout_width="match_parent"
            android1:layout_height="208dp"
            android1:orientation="vertical" >

            <TextView
                android1:id="@+id/artistsTitle"
                android1:layout_width="match_parent"
                android1:layout_height="wrap_content"
                android1:text="@string/artists"
                android1:textAppearance="?android:attr/textAppearanceMedium" />

            <ListView
                android1:id="@+id/artistList"
                android1:layout_width="match_parent"
                android1:layout_height="wrap_content"
                android1:layout_weight="0.3" >

            </ListView>
        </LinearLayout>

        <LinearLayout
            android1:layout_width="match_parent"
            android1:layout_height="wrap_content"
            android1:orientation="vertical" >

            <Button
                android1:id="@+id/eventDirection"
                android1:layout_width="match_parent"
                android1:layout_height="wrap_content"
                android1:text="@string/get_directions" />

            <Button
                android1:id="@+id/addToCalendarButton"
                android1:layout_width="match_parent"
                android1:layout_height="wrap_content"
                android1:text="@string/add_calendar" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>